<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/ColorWhiteOrBlack"
        android:paddingStart="13dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mini_music_album_picture"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/error_image"
            app:shapeAppearanceOverlay="@style/RoundedImageStyle"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id ="@+id/mini_name_of_the_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/SmellsLikeTeenSpirit"
                android:paddingTop="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_16sp"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textColor="?attr/ColorBlackOrWhite"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="14dp">
                <TextView
                    android:id="@+id/mini_amount_treks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/Nirvana"
                    style="@style/TextViewTrackItem"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>