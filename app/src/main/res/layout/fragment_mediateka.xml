<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/ColorWhiteOrBlack"
    tools:context=".mediateca.ui.MediatekaFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/mediateca"
            style="@style/ScreenTitleSettingsOreSearch"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/ColorWhiteOrBlack"
        app:tabTextColor="?attr/ColorBlackOrWhite"
        app:tabMode="fixed"
        app:tabIndicatorColor="?attr/ColorBlackOrWhite"
        app:tabIndicatorFullWidth="true"
        app:tabTextAppearance="@style/CustomTabText"
        android:layout_marginHorizontal="@dimen/size_16dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>