<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.ColorBackgroundSettings"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_arrow"
            android:src="@drawable/back_arrow_model"
            style="@style/BackArrowSettingsOreSearch"/>

        <TextView
            android:text="@string/settings"
            style="@style/ScreenTitleSettingsOreSearch"/>

    </LinearLayout>
    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dark_theme"
        android:textSize="@dimen/text_size_16sp"
        android:paddingVertical="@dimen/size_21dp"
        android:paddingStart="@dimen/size_16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="24dp"
        android:checked="true"
        android:textFontWeight ="400"
        android:theme="@style/Theme.Playlist_Maker"
        android:fontFamily="@font/ys_display_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_app"
            style="@style/TextViewSettingsStyle"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/share_app_model"
            style="@style/ImageViewSettingsStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/write_to_support"
            style="@style/TextViewSettingsStyle"/>

        <ImageView
            android:id="@+id/write_to_support"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/support_model"
            style="@style/ImageViewSettingsStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/agreement"
            style="@style/TextViewSettingsStyle"/>

        <ImageView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/agreement_model"
            style="@style/ImageViewSettingsStyle"/>
    </LinearLayout>

</LinearLayout>
